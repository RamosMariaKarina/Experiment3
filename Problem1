#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	int elements, maxelements, largestInt, minelements, smallestInt;
	int Array[10];
	double Sum, average;
	
	cout << "Enter 10 integers" << endl;
		
	for (elements = 0; elements < 10; elements++)
		cin >> Array[elements];

	Sum=0;
	for (elements =0; elements < 10; elements++)
		Sum = Sum + Array[elements];	
		average = Sum /10;
	
	maxelements = Array[0];
	for (elements = 0; elements < 10; elements++)
		if (Array[maxelements] < Array[elements])
			maxelements = Array[elements];
	
	minelements = Array[0];
	for (elements = 0; elements < 10; elements++)
		if (minelements > Array[elements])
			minelements = Array[elements];
		
		cout << "The smallest integer is: " << minelements << endl;	
		cout << "The largest integer is: " << maxelements << endl;
		cout << "The sum of the integers is : " << Sum << endl;
		cout << "The average of the 10 integer is : " << average << endl;	


	_getch();
	return 0;
}
